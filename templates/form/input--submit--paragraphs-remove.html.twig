{#
/**
 * @file
 * Theme override for an 'input' #type form element that is used in a paragraph
 * widget.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set classes = [
  'paragraph-form-item__action',
  'paragraph-form-item__action--remove',
]
%}
<button{{ attributes.addClass(classes) }}><span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg></span> <span class="button__text">{{ attributes.value }}</span></button>{{  children }}
