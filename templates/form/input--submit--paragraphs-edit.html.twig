{#
/**
 * @file
 * Theme override for an 'input' #type form element that is used in a paragraph
 * widget.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set classes = [
  'button--icon-only',
  'paragraph-form-item__action',
  'paragraph-form-item__action--edit',
]
%}
<button{{ attributes.addClass(classes) }}><span class="button__icon"><svg width="20" height="18" viewBox="0 0 20 18" xmlns="http://www.w3.org/2000/svg"><path d="M0 14.2V18h3.8l11-11.1L11 3.1 0 14.2zM17.7 4c.4-.4.4-1 0-1.4L15.4.3c-.4-.4-1-.4-1.4 0l-1.8 1.8L16 5.9 17.7 4zM9 16l-2 2h13v-2H9z" fill-rule="evenodd"/></svg></span> <span class="button__text">{{ attributes.value }}</span></button>{{  children }}
